<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="AgendaProApp.Principal"
        Title="AgendaPro" Height="600" Width="1000">
    <Grid>
        <!-- Colunas: 0 = Menu lateral, 1 = Conteúdo principal -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="111"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Menu lateral -->
        <StackPanel Grid.Column="0" Background="#F0F0F0">
            <TextBlock Text="Menu" FontWeight="Bold" FontSize="16" Margin="10"/>
            <Button x:Name="bt_tela_eventos" Content="Eventos" Height="50" Margin="10" Click="BtTelaEventos_Click"/>
            <Button x:Name="bt_tela_participantes" Content="Participantes" Height="50" Margin="10" Click="BtTelaParticipantes_Click"/>
            <Button x:Name="bt_tela_fornecedores" Content="Fornecedores" Height="50" Margin="10" Click="BtTelaFornecedores_Click"/>
            <Button x:Name="bt_tela_relatorios" Content="Relatórios" Height="50" Margin="10" Click="BtTelaRelatorios_Click"/>
        </StackPanel>

        <!-- TELA_Participantes -->
        <Grid Grid.Column="1" Margin="10,10,10,10" Visibility="Hidden" x:Name="TELA_Participantes" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- DataGrid -->
                <!-- Campos -->

                <RowDefinition Height="Auto"/>
                <!-- Botões -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="356*"/>
                    <ColumnDefinition Width="513*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Nome -->
                <StackPanel Orientation="Horizontal" Margin="5,5,5,5" Grid.Column="0" Grid.Row="0">
                    <Label Content="Nome:" Width="120"/>
                    <TextBox x:Name="txtNome" Width="200" MaxLength="100"/>
                </StackPanel>

                <!-- Documento -->
                <StackPanel Orientation="Horizontal" Margin="5,5,5,5" Grid.Column="1" Grid.Row="0">
                    <Label Content="CPF:" Width="50"/>
                    <TextBox x:Name="txtDocumento" Width="200" MaxLength="11"/>
                </StackPanel>

                <!-- Telefone -->
                <StackPanel Orientation="Horizontal" Margin="5,5,5,5" Grid.Column="0" Grid.Row="1">
                    <Label Content="Telefone:" Width="120"/>
                    <TextBox x:Name="txtTelefone" Width="200" MaxLength="30"/>
                </StackPanel>

                <!-- Email -->
                <StackPanel Orientation="Horizontal" Margin="5,5,5,5" Grid.Column="1" Grid.Row="1">
                    <Label Content="Email:" Width="50"/>
                    <TextBox x:Name="txtEmail" Width="200" MaxLength="200"/>
                </StackPanel>

                <StackPanel x:Name="Tipo_Participante" Orientation="Horizontal" Margin="5,5,5,5" Grid.Column="0" Grid.Row="2">
                    <Label Content="TipoParticipanteId:" Width="120"/>
                    <ComboBox x:Name="cmbTipoParticipanteId" Width="200" IsReadOnly="True" SelectedIndex="0"  SelectedValuePath="Tag" >
                        <ComboBoxItem Tag="0">Todos</ComboBoxItem>
                        <ComboBoxItem Tag="1">VIP</ComboBoxItem>
                        <ComboBoxItem Tag="3">Interno</ComboBoxItem>
                        <ComboBoxItem Tag="4">Externo</ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <!-- Ativo -->
                <StackPanel Orientation="Horizontal" Margin="5,5,5,5" Grid.Column="1" Grid.Row="2">
                    <Label Content="Ativo:" Width="50"/>
                    <CheckBox x:Name="chkAtivo" IsChecked="True"/>
                </StackPanel>
            </Grid>
            <!-- Botões -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Height="30" VerticalAlignment="Top">
                <Button x:Name="TELA_Participantes_btnIncluir" Content="Incluir" Width="60" Margin="5" Click="TELA_Participantes_btnIncluir_Click"/>
                <Button x:Name="TELA_Participantes_btnAtualizar" Content="Atualizar" Width="60" Margin="5" Click="TELA_Participantes_btnAtualizar_Click"/>
                <Button x:Name="TELA_Participantes_btnPesquisar" Content="Pesquisar" Width="60" Margin="5" Click="TELA_Participantes_btnPesquisar_Click"/>
                <Button x:Name="TELA_Participantes_btnLimpar" Content="Limpar" Width="60" Margin="5" Click="TELA_Participantes_btnLimpar_Click"/>
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid x:Name="TELA_Participantes_DTG" Grid.Row="2" AutoGenerateColumns="True" Margin="0,0,0,0"/>
        </Grid>

        <!-- TELA_Fornecedores -->
        <Grid Grid.Column="1" Margin="10,10,10,10" Visibility="Hidden" x:Name="TELA_Fornecedores">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <!-- DataGrids ocupam o espaço restante -->
            </Grid.RowDefinitions>

            <!-- Campos do fornecedor -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Nome -->
                <StackPanel Orientation="Horizontal" Margin="5,5,5,5" Grid.Column="0" Grid.Row="1">
                    <Label Content="Razão Social:" Width="80"/>
                    <TextBox x:Name="Fornecedor_txtNome" Width="200" MaxLength="100"/>
                </StackPanel>

                <!-- Documento -->
                <StackPanel Orientation="Horizontal" Margin="5,5,5,5" Grid.Column="0" Grid.Row="0">
                    <Label Content="CNPJ:" Width="80"/>
                    <TextBox x:Name="Fornecedor_txtDocumento" Width="200" MaxLength="14"/>
                </StackPanel>

                <!-- Telefone -->
                <StackPanel Orientation="Horizontal" Margin="5,5,5,5" Grid.Column="1" Grid.Row="1">
                    <Label Content="Telefone:" Width="70"/>
                    <TextBox x:Name="Fornecedor_txtTelefone" Width="200" MaxLength="30"/>
                </StackPanel>

                <!-- Email -->
                <StackPanel Orientation="Horizontal" Margin="5,5,5,5" Grid.Column="1" Grid.Row="0">
                    <Label Content="Email:" Width="70"/>
                    <TextBox x:Name="Fornecedor_txtEmail" Width="200" MaxLength="200"/>
                </StackPanel>

                <!-- Ativo -->
                <StackPanel Orientation="Horizontal" Margin="5,5,5,5" Grid.Column="0" Grid.Row="2">
                    <Label Content="Ativo:" Width="50"/>
                    <CheckBox x:Name="Fornecedor_chkAtivo" IsChecked="True" Margin="0,5,5,0"/>
                </StackPanel>
            </Grid>

            <!-- Botões -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Height="30" VerticalAlignment="Top">
                <Button x:Name="TELA_Fornecedor_btnIncluir" Content="Incluir" Width="60" Margin="5" Click="TELA_Fornecedor_btnIncluir_Click"/>
                <Button x:Name="TELA_Fornecedor_btnAtualizar" Content="Atualizar" Width="60" Margin="5" Click="TELA_Fornecedor_btnAtualizar_Click"/>
                <Button x:Name="TELA_Fornecedor_btnPesquisar" Content="Pesquisar" Width="60" Margin="5" Click="TELA_Fornecedor_btnPesquisar_Click"/>
                <Button x:Name="TELA_Fornecedor_btnLimpar" Content="Limpar" Width="60" Margin="5" Click="TELA_Fornecedor_btnLimpar_Click"/>

            </StackPanel>

            <!-- DataGrids lado a lado -->
            <Grid Grid.Row="2" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <!-- 80% -->
                    <ColumnDefinition Width="2*"/>
                    <!-- 20% -->
                </Grid.ColumnDefinitions>

                <!-- Fornecedores -->
                <DataGrid x:Name="TELA_Fornecedor_DTG" 
                  Grid.Column="0" 
                  AutoGenerateColumns="True" 
                  Margin="0,0,5,0" 
                  SelectionChanged="TELA_Fornecedor_DTG_seleciona"
                          IsReadOnly="True"/>

                <!-- Serviços do fornecedor selecionado -->
                <DataGrid x:Name="TELA_Fornecedor_Servicos_DTG" 
                  Grid.Column="1" 
                  AutoGenerateColumns="True" 
                  Margin="5,0,0,0"
                  InitializingNewItem="TELA_Fornecedor_Servicos_DTG_InitializingNewItem"
                          />
            </Grid>
        </Grid>

        <!-- TELA_Eventos -->
        <Grid Grid.Column="1" Margin="10,10,10,10" Visibility="Visible" x:Name="TELA_Eventos">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Campos do Evento -->
                <RowDefinition Height="Auto"/>
                <!-- Botões -->
                <RowDefinition Height="*"/>
                <!-- DataGrids -->
            </Grid.RowDefinitions>

            <!-- Campos do Evento -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Nome / evento / ativo-->
                <StackPanel Orientation="Horizontal" Margin="5" Grid.Column="0" Grid.Row="0">
                    <Label Content="Evento:" Width="50"/>
                    <TextBox x:Name="Evento_txtNome" Width="150" MaxLength="200"/>
                    <Label Content="Ativo:"/>
                    <CheckBox x:Name="Evento_chkAtivo" IsChecked="True" Margin="0,5,5,0"/>
                </StackPanel>

                <!-- Data de início -->
                <StackPanel Orientation="Horizontal" Margin="5" Grid.Column="0" Grid.Row="1">
                    <Label Content="Início:" Width="50"/>
                    <DatePicker x:Name="Evento_dpInicio" Width="150"/>
                    <TextBox x:Name="Evento_txtHRInicio" Width="50" MaxLength="5" Margin="5,0,0,0"
             PreviewTextInput="Hora_PreviewTextInput"
             LostFocus="Hora_LostFocus"/>
                </StackPanel>

                <!-- Data de fim -->
                <StackPanel Orientation="Horizontal" Margin="5" Grid.Column="1" Grid.Row="1">
                    <Label Content="Fim:" Width="50"/>
                    <DatePicker x:Name="Evento_dpFim" Width="150"/>
                    <TextBox x:Name="Evento_txtHRFim" Width="50" MaxLength="5" Margin="5,0,0,0"
             PreviewTextInput="Hora_PreviewTextInput"
             LostFocus="Hora_LostFocus"/>
                </StackPanel>

                <!-- CEP -->
                <StackPanel Orientation="Horizontal" Margin="5" Grid.Column="0" Grid.Row="2">


                    <Label Content="CEP:" Width="50"/>
                    <TextBox x:Name="Evento_txtCEP" Width="80" MaxLength="9" TextChanged="Evento_txtCEP_TextChanged"/>
                </StackPanel>

                <!-- Local / Endereço -->
                <StackPanel Orientation="Horizontal" Margin="5" Grid.Column="1" Grid.Row="2">
                    <Label Content="Local:" Width="50"/>
                    <TextBox x:Name="Evento_txtEndereco" Width="205" MaxLength="200"/>
                </StackPanel>

                <!-- Observações -->
                <StackPanel Orientation="Horizontal" Margin="5" Grid.Column="1" Grid.Row="0">
                    <Label Content="Obs:" Width="50"/>
                    <TextBox x:Name="Evento_txtObservacoes" Width="205" MaxLength="500"/>
                </StackPanel>

                <!-- Lotação máxima -->
                <StackPanel Orientation="Horizontal" Margin="5" Grid.Column="2" Grid.Row="1">
                    <Label Content="Lotação Máx:" Width="100"/>
                    <TextBox x:Name="Evento_txtCapacidadeUsado" Width="70" IsReadOnly="True"/>
                    <Label Content=" / " />
                    <TextBox x:Name="Evento_txtCapacidadeMaxima" Width="70" MaxLength="10" />
                </StackPanel>

                <!-- Orçamento máximo -->
                <StackPanel Orientation="Horizontal" Margin="5" Grid.Column="2" Grid.Row="0">
                    <Label Content="Orçamento:" Width="100"/>
                    <TextBox x:Name="Evento_txtOrcamentousado" Width="70" IsReadOnly="True"/>
                    <Label Content=" / " />
                    <TextBox x:Name="Evento_txtOrcamento" Width="70"/>
                </StackPanel>

                <!-- Tipo de Evento -->
                <StackPanel Orientation="Horizontal" Margin="5" Grid.Column="2" Grid.Row="2">
                    <Label Content="Tipo de Evento:" Width="100"/>
                    <ComboBox x:Name="Evento_cmbTipoEvento" Width="150" SelectedIndex="0" DisplayMemberPath="Nome" SelectedValuePath="Id" />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="2" Margin="0" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Linha de botões principais -->
                    <RowDefinition Height="*"/>
                    <!-- Linha dos DataGrids com botões "Listar" acima -->
                </Grid.RowDefinitions>




                <Grid Margin="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Linha dos botões principais -->
                        <RowDefinition Height="200"/>
                        <!-- DataGrid Eventos -->
                        <RowDefinition Height="Auto"/>
                        <!-- Linha dos botões Listar -->
                        <RowDefinition Height="150"/>
                        <!-- DataGrids Participantes e Serviços -->
                    </Grid.RowDefinitions>

                    <!-- Linha 1: Botões Incluir, Atualizar, Pesquisar, Limpar -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="0" Margin="5">
                        <Button x:Name="TELA_Eventos_btnIncluir" Content="Incluir" Width="60" Margin="5" Click="TELA_Eventos_btnIncluir_Click"/>
                        <Button x:Name="TELA_Eventos_btnAtualizar" Content="Atualizar" Width="60" Margin="5" Click="TELA_Eventos_btnAtualizar_Click"/>
                        <Button x:Name="TELA_Eventos_btnPesquisar" Content="Pesquisar" Width="60" Margin="5" Click="TELA_Eventos_btnPesquisar_Click"/>
                        <Button x:Name="TELA_Eventos_btnLimpar" Content="Limpar" Width="60" Margin="5,5,0,5" Click="TELA_Eventos_btnLimpar_Click"/>
                    </StackPanel>

                    <!-- DataGrid Eventos (ocupa toda a largura) -->
                    <DataGrid x:Name="TELA_Eventos_DTG"
              Grid.Row="1"
              AutoGenerateColumns="True"
              SelectionMode="Single"
              SelectionUnit="FullRow"
              IsReadOnly="True"
              SelectedCellsChanged="TELA_Eventos_DTG_seleciona"
              Margin="5"/>

                    <!-- Linha 2: Botões Listar Participantes e Serviços -->
                    <Grid Grid.Row="2" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="TELA_Eventos_btnListarParticipantes" 
                Content="Listar Participantes" 
                Grid.Column="0" Height="25" Margin="0,0,5,0" HorizontalAlignment="Stretch" 
                Click="TELA_Eventos_btnListarParticipantes_Click" />

                        <Button x:Name="TELA_Eventos_btnListarServicos" 
                Content="Listar Serviços" 
                Grid.Column="1" Height="25" Margin="5,0,0,0" HorizontalAlignment="Stretch"
                Click="TELA_Eventos_btnListarServicos_Click"/>
                    </Grid>

                    <!-- Linha 2: DataGrids Participantes e Serviços -->
                    <Grid Grid.Row="3" Margin="5,0,5,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <DataGrid x:Name="TELA_Eventos_Participantes_DTG"
                  Grid.Column="0"
                  AutoGenerateColumns="True"
                  SelectionMode="Extended"
                  SelectionUnit="FullRow"
                                  CellEditEnding="TELA_Eventos_Participantes_DTG_CellEditEnding"
                  Margin="0,0,5,0"/>

                        <DataGrid x:Name="TELA_Eventos_Servicos_DTG"
                  Grid.Column="1"
                  AutoGenerateColumns="True"
                  SelectionMode="Extended"
                  SelectionUnit="FullRow"
                  CellEditEnding="TELA_Eventos_Servicos_DTG_CellEditEnding"
                  Margin="5,0,0,0"/>
                    </Grid>
                </Grid>

            </Grid>
        </Grid>



    </Grid>
</Window>
