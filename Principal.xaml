<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="AgendaProApp.Principal"
        Title="AgendaPro" Height="600" Width="1000">
    <Grid>
        <!-- Colunas: 0 = Menu lateral, 1 = Conteúdo principal -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="111"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Menu lateral -->
        <StackPanel Grid.Column="0" Background="#F0F0F0">
            <TextBlock Text="Menu" FontWeight="Bold" FontSize="16" Margin="10"/>
            <Button x:Name="bt_tela_eventos" Content="Eventos" Height="50" Margin="10" Click="BtTelaEventos_Click"/>
            <Button x:Name="bt_tela_participantes" Content="Participantes" Height="50" Margin="10" Click="BtTelaParticipantes_Click"/>
            <Button x:Name="bt_tela_fornecedores" Content="Fornecedores" Height="50" Margin="10" Click="BtTelaFornecedores_Click"/>
            <Button x:Name="bt_tela_relatorios" Content="Relatórios" Height="50" Margin="10" Click="BtTelaRelatorios_Click"/>
        </StackPanel>

        <!-- TELA_Participantes -->
        <Grid Grid.Column="1" Margin="10,10,10,10" Visibility="Hidden" x:Name="TELA_Participantes" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- DataGrid -->
                <!-- Campos -->

                <RowDefinition Height="Auto"/>
                <!-- Botões -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="356*"/>
                    <ColumnDefinition Width="513*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Nome -->
                <StackPanel Orientation="Horizontal" Margin="5,5,5,5" Grid.Column="0" Grid.Row="0">
                    <Label Content="Nome:" Width="120"/>
                    <TextBox x:Name="txtNome" Width="200" MaxLength="100"/>
                </StackPanel>

                <!-- Documento -->
                <StackPanel Orientation="Horizontal" Margin="5,5,5,5" Grid.Column="1" Grid.Row="0">
                    <Label Content="CPF:" Width="50"/>
                    <TextBox x:Name="txtDocumento" Width="200" MaxLength="11"/>
                </StackPanel>

                <!-- Telefone -->
                <StackPanel Orientation="Horizontal" Margin="5,5,5,5" Grid.Column="0" Grid.Row="1">
                    <Label Content="Telefone:" Width="120"/>
                    <TextBox x:Name="txtTelefone" Width="200" MaxLength="30"/>
                </StackPanel>

                <!-- Email -->
                <StackPanel Orientation="Horizontal" Margin="5,5,5,5" Grid.Column="1" Grid.Row="1">
                    <Label Content="Email:" Width="50"/>
                    <TextBox x:Name="txtEmail" Width="200" MaxLength="200"/>
                </StackPanel>

                <StackPanel x:Name="Tipo_Participante" Orientation="Horizontal" Margin="5,5,5,5" Grid.Column="0" Grid.Row="2">
                    <Label Content="TipoParticipanteId:" Width="120"/>
                    <ComboBox x:Name="cmbTipoParticipanteId" Width="200" IsReadOnly="True" SelectedIndex="0"  SelectedValuePath="Tag" >
                        <ComboBoxItem Tag="0">Todos</ComboBoxItem>
                        <ComboBoxItem Tag="1">VIP</ComboBoxItem>
                        <ComboBoxItem Tag="3">Interno</ComboBoxItem>
                        <ComboBoxItem Tag="4">Externo</ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <!-- Ativo -->
                <StackPanel Orientation="Horizontal" Margin="5,5,5,5" Grid.Column="1" Grid.Row="2">
                    <Label Content="Ativo:" Width="50"/>
                    <CheckBox x:Name="chkAtivo" IsChecked="True"/>
                </StackPanel>
            </Grid>
            <!-- Botões -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Height="30" VerticalAlignment="Top">
                <Button x:Name="TELA_Participantes_btnIncluir" Content="Incluir" Width="60" Margin="5" Click="TELA_Participantes_btnIncluir_Click"/>
                <Button x:Name="TELA_Participantes_btnAtualizar" Content="Atualizar" Width="60" Margin="5" Click="TELA_Participantes_btnAtualizar_Click"/>
                <Button x:Name="TELA_Participantes_btnPesquisar" Content="Pesquisar" Width="60" Margin="5" Click="TELA_Participantes_btnPesquisar_Click"/>
                <Button x:Name="TELA_Participantes_btnLimpar" Content="Limpar" Width="60" Margin="5" Click="TELA_Participantes_btnLimpar_Click"/>
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid x:Name="TELA_Participantes_DTG" Grid.Row="2" AutoGenerateColumns="True" Margin="0,0,0,0" SelectionChanged="TELA_Participantes_DTG_seleciona" IsReadOnly="True"/>
        </Grid>

        <!-- TELA_Fornecedores -->
        <Grid Grid.Column="1" Margin="10,10,10,10" Visibility="Visible" x:Name="TELA_Fornecedores">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <!-- DataGrids ocupam o espaço restante -->
            </Grid.RowDefinitions>

            <!-- Campos do fornecedor -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Nome -->
                <StackPanel Orientation="Horizontal" Margin="5,5,5,5" Grid.Column="0" Grid.Row="1">
                    <Label Content="Razão Social:" Width="80"/>
                    <TextBox x:Name="Fornecedor_txtNome" Width="200" MaxLength="100"/>
                </StackPanel>

                <!-- Documento -->
                <StackPanel Orientation="Horizontal" Margin="5,5,5,5" Grid.Column="0" Grid.Row="0">
                    <Label Content="CNPJ:" Width="80"/>
                    <TextBox x:Name="Fornecedor_txtDocumento" Width="200" MaxLength="14"/>
                </StackPanel>

                <!-- Telefone -->
                <StackPanel Orientation="Horizontal" Margin="5,5,5,5" Grid.Column="1" Grid.Row="1">
                    <Label Content="Telefone:" Width="70"/>
                    <TextBox x:Name="Fornecedor_txtTelefone" Width="200" MaxLength="30"/>
                </StackPanel>

                <!-- Email -->
                <StackPanel Orientation="Horizontal" Margin="5,5,5,5" Grid.Column="1" Grid.Row="0">
                    <Label Content="Email:" Width="70"/>
                    <TextBox x:Name="Fornecedor_txtEmail" Width="200" MaxLength="200"/>
                </StackPanel>

                <!-- Ativo -->
                <StackPanel Orientation="Horizontal" Margin="5,5,5,5" Grid.Column="0" Grid.Row="2">
                    <Label Content="Ativo:" Width="50"/>
                    <CheckBox x:Name="Fornecedor_chkAtivo" IsChecked="True" Margin="0,5,5,0"/>
                </StackPanel>
            </Grid>

            <!-- Botões -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Height="30" VerticalAlignment="Top">
                <Button x:Name="TELA_Fornecedor_btnIncluir" Content="Incluir" Width="60" Margin="5" Click="TELA_Fornecedor_btnIncluir_Click"/>
                <Button x:Name="TELA_Fornecedor_btnAtualizar" Content="Atualizar" Width="60" Margin="5" Click="TELA_Fornecedor_btnAtualizar_Click"/>
                <Button x:Name="TELA_Fornecedor_btnPesquisar" Content="Pesquisar" Width="60" Margin="5" Click="TELA_Fornecedor_btnPesquisar_Click"/>
                <Button x:Name="TELA_Fornecedor_btnLimpar" Content="Limpar" Width="60" Margin="5" Click="TELA_Fornecedor_btnLimpar_Click"/>
                
            </StackPanel>

            <!-- DataGrids lado a lado -->
            <Grid Grid.Row="2" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <!-- 80% -->
                    <ColumnDefinition Width="2*"/>
                    <!-- 20% -->
                </Grid.ColumnDefinitions>

                <!-- Fornecedores -->
                <DataGrid x:Name="TELA_Fornecedor_DTG" 
                  Grid.Column="0" 
                  AutoGenerateColumns="True" 
                  Margin="0,0,5,0" 
                  SelectionChanged="TELA_Fornecedor_DTG_seleciona"
                          IsReadOnly="True"/>

                <!-- Serviços do fornecedor selecionado -->
                <DataGrid x:Name="TELA_Fornecedor_Servicos_DTG" 
                  Grid.Column="1" 
                  AutoGenerateColumns="True" 
                  Margin="5,0,0,0"
                  InitializingNewItem="TELA_Fornecedor_Servicos_DTG_InitializingNewItem"
                          />
            </Grid>
        </Grid>



    </Grid>
</Window>
