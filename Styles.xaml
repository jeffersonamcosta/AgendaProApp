<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Cores padrao -->
    <Color x:Key="bgc">#FAFAFA</Color>
    <Color x:Key="c1">#0078D7</Color>
    <Color x:Key="c2">#FF4081</Color>

    <!-- Brushes baseados nas cores -->
    <SolidColorBrush x:Key="bgb" Color="{StaticResource bgc}" />
    <SolidColorBrush x:Key="b1" Color="{StaticResource c1}" />
    <SolidColorBrush x:Key="b2" Color="{StaticResource c2}" />

    <!-- Estilo de botao padrao -->
    <Style TargetType="Button" x:Key="PrimaryButton">
        <Setter Property="Background" Value="{StaticResource b1}" />
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="BorderThickness" Value="0"/>
    
    </Style>

</ResourceDictionary>
